# database connection string
DATABASE_URL="postgresql://postgres:xxx@localhost:5432/blog?schema=public"

# port for the blog server
PORT=3001

# URL of the client application (用于邮件链接和第三方登录回调)
CLIENT_URL=http://localhost:3000

# 跨域配置 - 允许访问的域名列表
# 单个域名: http://localhost:3000
# 多个域名(逗号分隔): http://localhost:3000,http://localhost:3001,https://yourdomain.com
# 允许所有域名: 不设置此变量或留空
ALLOWED_ORIGINS=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Environment
NODE_ENV=development

# Google OAuth credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/callback/google

# Email
MAIL_HOST=smtp.qq.com
MAIL_PORT=465
MAIL_USER=your_email
MAIL_PASSWORD=your_email_password
